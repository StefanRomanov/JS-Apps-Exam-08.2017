{{>header}}
<div class="content">
    {{>navbar}}
<section id="viewComments">
    <div class="post" postId="{{_id}}">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                <p>{{description}}</p>
                <div class="info">
                    submitted {{date}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        {{#if isAuthor}}
                            <li class="action"><a class="editLink" href="#/edit/:{{_id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/:{{_id}}">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comment/:{{_id}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
        {{>comment}}
    {{/each}}
</section>

</div>
{{>footer}}